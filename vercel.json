{
  "version": 2,
  "routes": [
    { "src": "/ar", "dest": "/index.html" },
    { "src": "/en", "dest": "/index.html" },
    { "src": "/ar/(.*)", "dest": "/index.html" },
    { "src": "/en/(.*)", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "trailingSlash": false
}
